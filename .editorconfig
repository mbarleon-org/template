root = true

[*.{js,jsx,ts,tsx,py,md,yml,yaml}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx,yml,yaml}]
indent_style = space
indent_size = 2

[*.{c,cpp,h,hpp,py}]
indent_style = space
indent_size = 4
